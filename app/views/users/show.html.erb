<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'user_info', user: @user %>
      <%= render 'books/newpost', book: @book %>
    </div>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100,100) %> </td>
        <td>
          <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  </div>
  </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model: book do |f| %>
    <div class="form-group">
    <p>Title</p>
    <%= f.text_field :title %>
    </div>
    <div class="form-group">
    <p>Opinion</p>
    <%= f.text_area :body %>
    </div>
    <div><%= f.submit 'Create Book', class:"btn btn-success" %></div>
  <% end %>
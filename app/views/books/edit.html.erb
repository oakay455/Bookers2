<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
  <% end %>

<%= form_with model: @book do |f| %>
  <div class="form-group">
  <label for="inputTitle">Title</label></br>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%>
  </div>
  <div  class="form-group">
  <label>Opinion</label></br>
  <%= f.text_area :body, autofocus: true, id:"opinion", placeholder:"Opinion" %>
  </div>
  <div  class="form-group">
  <%= f.submit "Update Book",class:"btn btn-success" %>
  </div>
  <%= link_to "Show", book_path(@book.id) %>
   | 
  <%= link_to "Back", books_path %>
<% end %>
</div>
</div>
</div>

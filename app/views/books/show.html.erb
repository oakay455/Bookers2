<%= render 'users/user_info', user: @user %>
<%= render 'newpost', book: @newbook %>

<h1>Books detail</h1>
<table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= image_tag @book.user.get_profile_image(100,100) %></br>
            <%= link_to @book.user.name, user_path(@user) %></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <td>
          <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
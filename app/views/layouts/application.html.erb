<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/ce2f52ecc1.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="/">Bookers</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <% if user_signed_in? %>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
        <%= link_to "/users/#{current_user.id}",class:'nav-link text-white' do %>
           <i class="fas fa-home"></i>
           Home
           <% end %>
        </li>
        <li class="nav-item">
          <%= link_to users_path,class:'nav-link text-white' do %>
            <i class="fas fa-users"></i>
            Users
            <% end %>
        </li>
        <li class="nav-item">
          <%= link_to books_path,class:'nav-link text-white' do %>
            <i class="fas fa-book-open"></i>
            Books
            <% end %>
        </li>
        <li class="nav-item">
          <%= link_to destroy_user_session_path, method: :delete,class:'nav-link text-white' do %>
            <i class="fas fa-sign-out-alt"></i>
            Log out
            <% end %>
        </li>
      </ul>
        <% else %>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item ml-auto">
        <%= link_to root_path,class:'nav-link text-white' do %>
          <i class="fas fa-home"></i>
          Home
          <% end %>
        </li>
        <li class="nav-item ml-auto">
        <%= link_to about_path,class:'nav-link text-white' do %>
          <i class="fas fa-link"></i>
            About
            <% end %>
        </li>
        <li class="nav-item ml-auto">
        <%= link_to new_user_registration_path,class:'nav-link text-white' do %>
          <i class="fas fa-user-plus"></i>
            Sign up
            <% end %>
        </li>
        <li class="nav-item ml-auto">
        <%= link_to new_user_session_path,class:'nav-link text-white' do %>
          <i class="fas fa-sign-in-alt"></i>
          Log in
          <% end %>
        </li>
      </ul>
      <% end %>
    </div>
  </div>
</nav>
</header>
<main>
   <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
  <%= yield %>
  </main>
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRignt Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
  </body>
</html>
